<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1e1e24">

        <ImageView
            android:id="@+id/picCoffee"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />
        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esspresso"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="36sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minus" />

            <TextView
                android:id="@+id/numberOrderTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="28sp"/>
            <ImageView
                android:id="@+id/plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plus"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="200dp"
                android:id="@+id/fee"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="$30"
                android:textAlignment="gravity"
                android:gravity="end"/>
        </LinearLayout>
        <TextView
            android:id="@+id/descriptionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A concentrated shot of coffee brewed by forcing hot water through finely-ground coffee beans"
            android:textColor="#e3d5ca"
            android:padding="16dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/vol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume: 90ml"
            android:layout_marginTop="0dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addToCartBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:hint="Add to Cart"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:textSize="26sp"
                android:background="@drawable/search_bar"
                android:gravity="center_horizontal" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_favorite_24"
                android:backgroundTint="#e38035"/>

        </LinearLayout>
</LinearLayout>